{
    "$defs": {
        "ActionEnum": {
            "description": "",
            "enum": [
                "ACCEPT",
                "KEEP_AS_NON_CORE",
                "REMOVE",
                "MODIFY",
                "MARK_AS_OVER_ANNOTATED",
                "UNDECIDED",
                "PENDING",
                "NEW"
            ],
            "title": "ActionEnum",
            "type": "string"
        },
        "AnnotationExtension": {
            "additionalProperties": false,
            "description": "",
            "properties": {
                "predicate": {
                    "description": "Predicate of the extension",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "term": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/Term"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "description": "Term to be annotated"
                }
            },
            "title": "AnnotationExtension",
            "type": "object"
        },
        "CoreFunction": {
            "additionalProperties": false,
            "description": "A core function is a GO-CAM-like annotation of the core evolved functions of a gene. This is a synthesis of the reviewed core annotations, brought together into a unified GO-CAM-like representation.",
            "properties": {
                "anatomical_locations": {
                    "items": {
                        "$ref": "#/$defs/Term"
                    },
                    "type": [
                        "array",
                        "null"
                    ]
                },
                "description": {
                    "description": "Description of the core function",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "directly_involved_in": {
                    "items": {
                        "$ref": "#/$defs/Term"
                    },
                    "type": [
                        "array",
                        "null"
                    ]
                },
                "in_complex": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/Term"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "locations": {
                    "items": {
                        "$ref": "#/$defs/Term"
                    },
                    "type": [
                        "array",
                        "null"
                    ]
                },
                "molecular_function": {
                    "$ref": "#/$defs/Term"
                },
                "substrates": {
                    "items": {
                        "$ref": "#/$defs/Term"
                    },
                    "type": [
                        "array",
                        "null"
                    ]
                },
                "supported_by": {
                    "items": {
                        "$ref": "#/$defs/SupportingTextInReference"
                    },
                    "type": [
                        "array",
                        "null"
                    ]
                }
            },
            "required": [
                "molecular_function"
            ],
            "title": "CoreFunction",
            "type": "object"
        },
        "EvidenceType": {
            "description": "Gene Ontology evidence codes mapped to Evidence and Conclusion Ontology (ECO) terms",
            "enum": [
                "EXP",
                "IDA",
                "IPI",
                "IMP",
                "IGI",
                "IEP",
                "HTP",
                "HDA",
                "HMP",
                "HGI",
                "HEP",
                "IBA",
                "IBD",
                "IKR",
                "IRD",
                "ISS",
                "ISO",
                "ISA",
                "ISM",
                "IGC",
                "RCA",
                "TAS",
                "NAS",
                "IC",
                "ND",
                "IEA"
            ],
            "title": "EvidenceType",
            "type": "string"
        },
        "ExistingAnnotation": {
            "additionalProperties": false,
            "description": "An existing annotation from the GO database, plus a review of the annotation.",
            "properties": {
                "evidence_type": {
                    "$ref": "#/$defs/EvidenceType",
                    "description": "Evidence code (e.g., IDA, IBA, ISS, TAS)"
                },
                "extensions": {
                    "items": {
                        "$ref": "#/$defs/AnnotationExtension"
                    },
                    "type": [
                        "array",
                        "null"
                    ]
                },
                "negated": {
                    "description": "Whether the term is negated",
                    "type": [
                        "boolean",
                        "null"
                    ]
                },
                "original_reference_id": {
                    "description": "ID of the original reference",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "retired": {
                    "description": "Whether the annotation is retired or replaced",
                    "type": [
                        "boolean",
                        "null"
                    ]
                },
                "review": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/Review"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "description": "Review of the gene"
                },
                "supporting_entities": {
                    "description": "IDs of the supporting entities",
                    "items": {
                        "type": "string"
                    },
                    "type": [
                        "array",
                        "null"
                    ]
                },
                "term": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/Term"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "description": "Term to be annotated"
                }
            },
            "title": "ExistingAnnotation",
            "type": "object"
        },
        "Experiment": {
            "additionalProperties": false,
            "description": "A suggested experiment to answer a question about the gene",
            "properties": {
                "description": {
                    "description": "Detailed description of the experiment to be performed",
                    "type": "string"
                },
                "experiment_type": {
                    "description": "Type of experiment or assay to answer the question",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "hypothesis": {
                    "description": "Hypothesis to be investigated",
                    "type": [
                        "string",
                        "null"
                    ]
                }
            },
            "required": [
                "description"
            ],
            "title": "Experiment",
            "type": "object"
        },
        "Finding": {
            "additionalProperties": false,
            "description": "A finding is a statement about a gene, which is supported by a reference. Similar to \"comments\" in uniprot",
            "properties": {
                "full_text_unavailable": {
                    "description": "Whether the full text is unavailable",
                    "type": [
                        "boolean",
                        "null"
                    ]
                },
                "reference_section_type": {
                    "$ref": "#/$defs/ManuscriptSection",
                    "description": "Type of section in the reference (e.g., 'ABSTRACT', 'METHODS', 'RESULTS', 'DISCUSSION')"
                },
                "statement": {
                    "description": "Concise statement describing an aspect of the gene",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "supporting_text": {
                    "description": "Supporting text from the publication. This should be exact substrings. Different substrings can be broken up by '...'s. These substrings will be checked against the actual text of the paper. If editorialization is necessary, put this in square brackets (this is not checked). For example, you can say '...[CFAP300 shows] transport within cilia is IFT dependent...'",
                    "type": [
                        "string",
                        "null"
                    ]
                }
            },
            "title": "Finding",
            "type": "object"
        },
        "GOBiologicalProcessEnum": {
            "description": "A biological process term in the GO ontology",
            "title": "GOBiologicalProcessEnum",
            "type": "string"
        },
        "GOCellularLocationEnum": {
            "description": "A cellular location term in the GO ontology (excludes protein-containing complexes)",
            "title": "GOCellularLocationEnum",
            "type": "string"
        },
        "GOMolecularActivityEnum": {
            "description": "A molecular activity term in the GO ontology",
            "title": "GOMolecularActivityEnum",
            "type": "string"
        },
        "GOProteinContainingComplexEnum": {
            "description": "A protein-containing complex term in the GO ontology",
            "title": "GOProteinContainingComplexEnum",
            "type": "string"
        },
        "GOTermEnum": {
            "description": "A term in the GO ontology",
            "title": "GOTermEnum",
            "type": "string"
        },
        "GeneReview": {
            "additionalProperties": false,
            "description": "Complete review for a gene",
            "properties": {
                "aliases": {
                    "items": {
                        "type": "string"
                    },
                    "type": [
                        "array",
                        "null"
                    ]
                },
                "core_functions": {
                    "items": {
                        "$ref": "#/$defs/CoreFunction"
                    },
                    "type": [
                        "array",
                        "null"
                    ]
                },
                "description": {
                    "description": "Description of the entity",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "existing_annotations": {
                    "items": {
                        "$ref": "#/$defs/ExistingAnnotation"
                    },
                    "type": [
                        "array",
                        "null"
                    ]
                },
                "gene_symbol": {
                    "description": "Symbol of the gene",
                    "type": "string"
                },
                "id": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "product_type": {
                    "$ref": "#/$defs/ProductTypeEnum",
                    "description": "Type of gene product (protein, ncRNA, etc.)"
                },
                "proposed_new_terms": {
                    "description": "Proposed new ontology terms that should exist but don't",
                    "items": {
                        "$ref": "#/$defs/ProposedOntologyTerm"
                    },
                    "type": [
                        "array",
                        "null"
                    ]
                },
                "references": {
                    "items": {
                        "$ref": "#/$defs/Reference"
                    },
                    "type": [
                        "array",
                        "null"
                    ]
                },
                "suggested_experiments": {
                    "items": {
                        "$ref": "#/$defs/Experiment"
                    },
                    "type": [
                        "array",
                        "null"
                    ]
                },
                "suggested_questions": {
                    "description": "Suggested questions to ask experts about the gene. Only include if not obvious from the literature.",
                    "items": {
                        "$ref": "#/$defs/Question"
                    },
                    "type": [
                        "array",
                        "null"
                    ]
                },
                "tags": {
                    "description": "Tags associated with the gene for categorization and organization",
                    "items": {
                        "type": "string"
                    },
                    "type": [
                        "array",
                        "null"
                    ]
                },
                "taxon": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/Term"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            },
            "required": [
                "id",
                "gene_symbol"
            ],
            "title": "GeneReview",
            "type": "object"
        },
        "ManuscriptSection": {
            "description": "Sections of a scientific manuscript or publication",
            "enum": [
                "TITLE",
                "ABSTRACT",
                "KEYWORDS",
                "INTRODUCTION",
                "LITERATURE_REVIEW",
                "METHODS",
                "RESULTS",
                "DISCUSSION",
                "CONCLUSIONS",
                "APPENDICES",
                "SUPPLEMENTARY_MATERIAL",
                "DATABASE_ENTRY",
                "OTHER"
            ],
            "title": "ManuscriptSection",
            "type": "string"
        },
        "ProductTypeEnum": {
            "description": "Type of gene product",
            "enum": [
                "PROTEIN",
                "MIRNA",
                "LNCRNA",
                "SNORNA",
                "SNRNA",
                "TRNA",
                "RRNA",
                "PIRNA",
                "ANTISENSE_RNA",
                "PSEUDOGENE",
                "OTHER_NCRNA"
            ],
            "title": "ProductTypeEnum",
            "type": "string"
        },
        "ProposedOntologyTerm": {
            "additionalProperties": false,
            "description": "A proposed new ontology term that should exist but doesn't currently",
            "properties": {
                "justification": {
                    "description": "Justification for why this term is needed",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "proposed_definition": {
                    "description": "Proposed definition for the new term",
                    "type": "string"
                },
                "proposed_mappings": {
                    "description": "Proposed mappings to equivalent terms in other ontologies",
                    "items": {
                        "$ref": "#/$defs/TermMapping"
                    },
                    "type": [
                        "array",
                        "null"
                    ]
                },
                "proposed_name": {
                    "description": "Proposed name for the new term",
                    "type": "string"
                },
                "proposed_parent": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/Term"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "description": "Proposed parent term in the ontology hierarchy"
                },
                "supported_by": {
                    "items": {
                        "$ref": "#/$defs/SupportingTextInReference"
                    },
                    "type": [
                        "array",
                        "null"
                    ]
                }
            },
            "required": [
                "proposed_name",
                "proposed_definition"
            ],
            "title": "ProposedOntologyTerm",
            "type": "object"
        },
        "Question": {
            "additionalProperties": false,
            "description": "A question to be answered about the gene",
            "properties": {
                "experts": {
                    "description": "Experts to answer the question. These should be drawn from the authors of relevant publications already referenced. If no suitable experts are available, it's OK to leave this as an empty list!",
                    "items": {
                        "type": "string"
                    },
                    "type": [
                        "array",
                        "null"
                    ]
                },
                "question": {
                    "description": "Question to be answered",
                    "type": "string"
                }
            },
            "required": [
                "question"
            ],
            "title": "Question",
            "type": "object"
        },
        "ROTermEnum": {
            "description": "A term in the relation ontology",
            "title": "ROTermEnum",
            "type": "string"
        },
        "Reference": {
            "additionalProperties": false,
            "description": "A reference is a published text  that describes a finding or a method. References might be formal publications (where the ID is a PMID), or for methods, a GO_REF. Additionally, a reference to a local ad-hoc analysis or review can be made by using the `file:` prefix.",
            "properties": {
                "findings": {
                    "items": {
                        "$ref": "#/$defs/Finding"
                    },
                    "type": [
                        "array",
                        "null"
                    ]
                },
                "full_text_unavailable": {
                    "description": "Whether the full text is unavailable",
                    "type": [
                        "boolean",
                        "null"
                    ]
                },
                "id": {
                    "type": "string"
                },
                "is_invalid": {
                    "description": "Whether the reference is invalid (e.g., retracted or replaced)",
                    "type": [
                        "boolean",
                        "null"
                    ]
                },
                "title": {
                    "description": "Title of the entity",
                    "type": "string"
                }
            },
            "required": [
                "id",
                "title"
            ],
            "title": "Reference",
            "type": "object"
        },
        "Review": {
            "additionalProperties": false,
            "description": "A review of an existing annotation.",
            "if": {
                "properties": {
                    "action": {
                        "const": "MODIFY"
                    }
                },
                "required": [
                    "action"
                ]
            },
            "properties": {
                "action": {
                    "$ref": "#/$defs/ActionEnum",
                    "description": "Action to be taken"
                },
                "additional_reference_ids": {
                    "description": "IDs of the references",
                    "items": {
                        "type": "string"
                    },
                    "type": [
                        "array",
                        "null"
                    ]
                },
                "proposed_replacement_terms": {
                    "description": "Proposed replacement terms",
                    "items": {
                        "$ref": "#/$defs/Term"
                    },
                    "type": [
                        "array",
                        "null"
                    ]
                },
                "reason": {
                    "description": "Reason for the action",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "summary": {
                    "description": "Summary of the review",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "supported_by": {
                    "items": {
                        "$ref": "#/$defs/SupportingTextInReference"
                    },
                    "type": [
                        "array",
                        "null"
                    ]
                }
            },
            "then": {
                "properties": {
                    "proposed_replacement_terms": {}
                },
                "required": [
                    "proposed_replacement_terms"
                ]
            },
            "title": "Review",
            "type": "object"
        },
        "SupportingTextInReference": {
            "additionalProperties": false,
            "description": "A supporting text in a reference.",
            "properties": {
                "full_text_unavailable": {
                    "description": "Whether the full text is unavailable",
                    "type": [
                        "boolean",
                        "null"
                    ]
                },
                "reference_id": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "reference_section_type": {
                    "$ref": "#/$defs/ManuscriptSection",
                    "description": "Type of section in the reference (e.g., 'ABSTRACT', 'METHODS', 'RESULTS', 'DISCUSSION')"
                },
                "supporting_text": {
                    "description": "Supporting text from the publication. This should be exact substrings. Different substrings can be broken up by '...'s. These substrings will be checked against the actual text of the paper. If editorialization is necessary, put this in square brackets (this is not checked). For example, you can say '...[CFAP300 shows] transport within cilia is IFT dependent...'",
                    "type": [
                        "string",
                        "null"
                    ]
                }
            },
            "title": "SupportingTextInReference",
            "type": "object"
        },
        "Term": {
            "additionalProperties": false,
            "description": "A term in a specific ontology",
            "properties": {
                "description": {
                    "description": "Description of the entity",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "id": {
                    "description": "An OBO CURIE for a term in GO, CL, CHEBI, etc.",
                    "type": "string"
                },
                "label": {
                    "description": "the term name",
                    "type": "string"
                },
                "ontology": {
                    "description": "Ontology of the term. E.g `go`, `cl`, `hp`",
                    "type": [
                        "string",
                        "null"
                    ]
                }
            },
            "required": [
                "id",
                "label"
            ],
            "title": "Term",
            "type": "object"
        },
        "TermMapping": {
            "additionalProperties": false,
            "description": "A mapping between the proposed term and an equivalent term in another ontology",
            "properties": {
                "predicate": {
                    "description": "Mapping predicate (e.g., 'skos:exactMatch', 'skos:closeMatch', 'skos:broadMatch', 'skos:narrowMatch')",
                    "type": "string"
                },
                "target_term": {
                    "$ref": "#/$defs/Term",
                    "description": "The target term in another ontology"
                }
            },
            "required": [
                "predicate",
                "target_term"
            ],
            "title": "TermMapping",
            "type": "object"
        }
    },
    "$id": "https://ai4curation.io/ai-gene-review",
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "additionalProperties": true,
    "description": "Complete review for a gene",
    "metamodel_version": "1.7.0",
    "properties": {
        "aliases": {
            "items": {
                "type": "string"
            },
            "type": [
                "array",
                "null"
            ]
        },
        "core_functions": {
            "items": {
                "$ref": "#/$defs/CoreFunction"
            },
            "type": [
                "array",
                "null"
            ]
        },
        "description": {
            "description": "Description of the entity",
            "type": [
                "string",
                "null"
            ]
        },
        "existing_annotations": {
            "items": {
                "$ref": "#/$defs/ExistingAnnotation"
            },
            "type": [
                "array",
                "null"
            ]
        },
        "gene_symbol": {
            "description": "Symbol of the gene",
            "type": "string"
        },
        "id": {
            "type": [
                "string",
                "null"
            ]
        },
        "product_type": {
            "$ref": "#/$defs/ProductTypeEnum",
            "description": "Type of gene product (protein, ncRNA, etc.)"
        },
        "proposed_new_terms": {
            "description": "Proposed new ontology terms that should exist but don't",
            "items": {
                "$ref": "#/$defs/ProposedOntologyTerm"
            },
            "type": [
                "array",
                "null"
            ]
        },
        "references": {
            "items": {
                "$ref": "#/$defs/Reference"
            },
            "type": [
                "array",
                "null"
            ]
        },
        "suggested_experiments": {
            "items": {
                "$ref": "#/$defs/Experiment"
            },
            "type": [
                "array",
                "null"
            ]
        },
        "suggested_questions": {
            "description": "Suggested questions to ask experts about the gene. Only include if not obvious from the literature.",
            "items": {
                "$ref": "#/$defs/Question"
            },
            "type": [
                "array",
                "null"
            ]
        },
        "tags": {
            "description": "Tags associated with the gene for categorization and organization",
            "items": {
                "type": "string"
            },
            "type": [
                "array",
                "null"
            ]
        },
        "taxon": {
            "anyOf": [
                {
                    "$ref": "#/$defs/Term"
                },
                {
                    "type": "null"
                }
            ]
        }
    },
    "required": [
        "id",
        "gene_symbol"
    ],
    "title": "gene_review",
    "type": "object",
    "version": null
}
