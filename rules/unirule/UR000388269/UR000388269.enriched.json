    "annotations": [
      {
        "annotationType": "ANNOTATION"
      },
      {
        "annotationType": "ANNOTATION",
        "comment": {
          "commentType": "FUNCTION",
          "texts": [
            {
              "value": "Plays an important role in the cytoplasmic envelopment of tegument proteins and capsids during the assembly and egress processes. Participates also in viral entry at the fusion step probably by regulating the core fusion machinery"
            }
          ]
        }
      },
      {
        "annotationType": "ANNOTATION",
        "comment": {
          "commentType": "SUBCELLULAR LOCATION",
          "subcellularLocations": [
            {
              "location": {
                "value": "Virion tegument"
              }
            }
          ]
        }
      },
      {
        "annotationType": "ANNOTATION",
        "comment": {
          "commentType": "PTM",
          "texts": [
            {
              "value": "Myristoylation and palmitoylation (probably on one or more of the nearby cysteines at the N-terminus) enable membrane-binding and Golgi apparatus-specific targeting and are essential for efficient packaging"
            }
          ]
        }
      },
      {
        "annotationType": "ANNOTATION",
        "comment": {
          "commentType": "PTM",
          "texts": [
            {
              "value": "Phosphorylated. Phosphorylation does not seem to be required for recycling to the host Golgi apparatus. Packaging is selective for underphosphorylated forms"
            }
          ]
        }
      },
      {
        "annotationType": "ANNOTATION",
        "comment": {
          "commentType": "SIMILARITY",
          "texts": [
            {
              "value": "Belongs to the herpesviridae cytoplasmic envelopment protein 3 family"
            }
          ]
        }
      },
      {
        "annotationType": "ANNOTATION",
        "comment": {
          "commentType": "SUBUNIT",
          "texts": [
            {
              "value": "Interacts with cytoplasmic envelopment protein 2; this interaction is essential for the proper localization of each protein to the assembly complex and thus for the production of infectious virus"
            }
          ]
        }
      },
