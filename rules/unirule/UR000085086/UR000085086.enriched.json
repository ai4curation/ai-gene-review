          "reaction": {
            "name": "pretRNA = a 3'-half-tRNA molecule with a 5'-OH end + a 5'-half-tRNA molecule with a 2',3'-cyclic phosphate end + an intron with a 2',3'-cyclic phosphate and a 5'-hydroxyl terminus.",
            "reactionCrossReferences": [],
            "ecNumber": "4.6.1.16"
